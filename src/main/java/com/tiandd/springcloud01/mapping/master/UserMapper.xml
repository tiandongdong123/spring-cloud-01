<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tiandd.springcloud01.dao.master.UserDao">
    <resultMap id="userMap" type="com.tiandd.springcloud01.pojo.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="age" property="age" jdbcType="BIGINT"/>
    </resultMap>
   <select id="selectUserById" parameterType="com.tiandd.springcloud01.pojo.User" resultMap="userMap">
       select * from user where id=#{id};
   </select>
</mapper>